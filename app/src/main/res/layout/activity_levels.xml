<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_Levels"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LevelsActivity"
    android:background="@drawable/theambg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_tagline"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:background="@drawable/levelimg" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_lvl0"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="50dp"
                    android:background="#CDDC39"
                    android:text="0\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    tools:ignore="TextContrastCheck">

                </Button>

                <Button
                    android:id="@+id/btn_lvl1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#4CAF50"
                    android:text="1\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    tools:ignore="TextContrastCheck">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_lvl2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="50dp"
                    android:background="#00BCD4"
                    android:text="2\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    tools:ignore="TextContrastCheck">

                </Button>

                <Button
                    android:id="@+id/btn_lvl3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#2196F3"
                    android:text="3\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_lvl4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="50dp"
                    android:background="#F44336"
                    android:text="4\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/btn_lvl5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#E91E63"
                    android:text="5\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_lvl6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="50dp"
                    android:background="#673AB7"
                    android:text="6\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/btn_lvl7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#3F51B5"
                    android:text="7\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_margin="10dp"

                android:gravity="center">

                <Button
                    android:id="@+id/btn_lvl8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="50dp"
                    android:background="#AC23DC"
                    android:text="8\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp">

                </Button>

                <Button
                    android:id="@+id/btn_customlvl"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="#4ABAAB"
                    android:text="Custom\nLEVEL"
                    android:textColor="#ffffff"
                    android:textSize="20dp">

                </Button>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</LinearLayout>